@model ShopProjectAsp_PhamVanLinh.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Create Product </h1>
            <a asp-action="Index" class="btn btn-outline-secondary create">Back to List</a>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Product</li>
              <li class="breadcrumb-item active">Create</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
        <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">Add a new Product</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <form asp-action="Create"  enctype="multipart/form-data">
                      <!-- text input -->
                      <div class="form-group">
                        <label>Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Enter ...">
                        <span asp-validation-for="Name" class="text-danger"></span>
                      </div>
                      <div class="form-group">
                        <label>Images</label>
                        <input type="file" asp-for="img" name="file" placeholder="Enter ...">
                        <input type="hidden" asp-for="img"/>
                      </div>
                      <!-- textarea -->
                      <div class="form-group">
                        <label>Description</label>
                        <textarea  asp-for="Description" class="form-control" rows="3" placeholder="Enter ..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                      <div class="form-group">
                        <label>Price</label>
                        <input asp-for="Price" type="Number" class="form-control" placeholder="Enter ...">
                        <span asp-validation-for="Price" class="text-danger"></span>
                      </div>
                      <div class="form-group">
                        <label>Quantity</label>
                        <input asp-for="Quantity" type="Number" class="form-control" placeholder="Enter ...">
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                      </div>
                      <div class="form-group">
                        <label>Category Id</label>
                        <input asp-for="Category_id" type="Number" class="form-control" placeholder="Enter ...">
                        <span asp-validation-for="Category_id" class="text-danger"></span>
                      </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-outline-success" />
                        </div>
                </form>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
       </div>
    </div>
</section>



