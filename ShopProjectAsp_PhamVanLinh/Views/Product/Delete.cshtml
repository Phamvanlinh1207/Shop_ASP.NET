@model ShopProjectAsp_PhamVanLinh.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Delete Product </h1>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a> 

            </form>
           </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Product</li>
              <li class="breadcrumb-item active">Details</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
        <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title" style="color:#090000;"><b>Are you sure you want to delete this?</b></h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                      <!-- text input -->
                     <input type="hidden" asp-for="Id" />
                      <div class="form-group">
                        <label>Name</label>
                        <input asp-for="Name" type="text" class="form-control"disabled>
                        <span asp-validation-for="Name" class="text-danger"></span>
                      </div>
                      <div class="form-group">
                        <label>Image</label>
                        <img  src="@Model.img" style="width:500px;height:300px"/>
                      </div>
                      <div class="form-group">
                        <label>Price</label>
                        <input asp-for="Price" type="text" class="form-control"disabled>
                        <span asp-validation-for="Price" class="text-danger"></span>
                      </div>
                      <div class="form-group">
                        <label>Email</label>
                        <input asp-for="Quantity" type="text" class="form-control"disabled>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                      </div>
                      <!-- textarea -->
                      <div class="form-group">
                        <label>Description</label>
                        <textarea  asp-for="Description" class="form-control" rows="3"disabled></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <input asp-for="Category_id" type="text" class="form-control"disabled>
                        <span asp-validation-for="Category_id" class="text-danger"></span>
                      </div>
              </div>
              
              <!-- /.card-body -->
            </div>
          </div>
       </div>
    </div>
</section>