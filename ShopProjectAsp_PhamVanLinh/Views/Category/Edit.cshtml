@model ShopProjectAsp_PhamVanLinh.Models.Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Edit Category </h1>
            <a asp-action="Index" class="btn btn-outline-secondary create">Back to List</a>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Category</li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
        <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">Edit category</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <form asp-action="Edit">
                      <!-- text input -->
                     <input type="hidden" asp-for="Id" />
                      <div class="form-group">
                        <label>Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Enter ...">
                        <span asp-validation-for="Name" class="text-danger"></span>
                      </div>
                      <!-- textarea -->
                      <div class="form-group">
                        <label>Description</label>
                        <textarea  asp-for="Description" class="form-control" rows="3" placeholder="Enter ..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-outline-warning" />
                        </div>
                    </form>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
       </div>
    </div>
</section>
