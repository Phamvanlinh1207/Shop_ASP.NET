@model ShopProjectAsp_PhamVanLinh.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Details Category </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a> |
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">Edit</a>
                   
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Category</li>
              <li class="breadcrumb-item active">Details</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
        <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">Show Detail category</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                      <!-- text input -->
                     <input type="hidden" asp-for="Id" />
                      <div class="form-group">
                        <label>Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="@Html.DisplayFor(model => model.Name)"disabled>
                        <span asp-validation-for="Name" class="text-danger"></span>
                      </div>
                      <!-- textarea -->
                      <div class="form-group">
                        <label>Description</label>
                        <textarea  asp-for="Description" class="form-control" rows="3" placeholder="@Html.DisplayFor(model => model.Description)"disabled></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
       </div>
    </div>
</section>